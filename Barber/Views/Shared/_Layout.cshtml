<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Barber Salon</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <!-- Nazwa marki / logo -->
                <a class="navbar-brand" href="@Url.Action("Index","Appointments")">Barber Salon</a>

                <!-- Przyciski do rozwijania paska nawigacji dla mniejszych ekranów -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Sekcja z linkami w navbarze -->
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto">
                        <!-- Link do Kalendarza -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Calendar","Appointments")">Kalendarz</a>
                        </li>
                        <!-- Link do Wizyt -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Appointments")">Wizyty</a>
                        </li>
                        <!-- Link do Klientów -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Customers")">Klienci</a>
                        </li>
                        <!-- Link do Pracowników -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Employees")">Pracownicy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container" style="margin:20px;">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        &copy; 2024 Barber Salon. Wszystkie prawa zastrzeżone.
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
