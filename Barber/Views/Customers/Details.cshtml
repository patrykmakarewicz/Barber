@* Views/Customers/Details.cshtml *@
@model Barber.Models.Customer

@{
    ViewBag.Title = "Szczegóły Klienta";
}

<h2 class="mb-4">Szczegóły Klienta</h2>

<dl class="row">
    <dt class="col-sm-3">Imię</dt>
    <dd class="col-sm-9">@Model.FirstName</dd>

    <dt class="col-sm-3">Nazwisko</dt>
    <dd class="col-sm-9">@Model.LastName</dd>

    <dt class="col-sm-3">Telefon</dt>
    <dd class="col-sm-9">@Model.PhoneNumber</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>
</dl>

<a class="btn btn-secondary" href="@Url.Action("Index","Customers")">Powrót do listy</a>
