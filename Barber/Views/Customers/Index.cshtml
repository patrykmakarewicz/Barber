@* Views/Customers/Index.cshtml *@
@model IEnumerable<Barber.Models.Customer>

@{
    ViewBag.Title = "Lista Klientów";
}

<h2 class="mb-4">Lista Klientów</h2>
<table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Telefon</th>
            <th>Email</th>
            <th style="width:220px;">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.FirstName</td>
                <td>@c.LastName</td>
                <td>@c.PhoneNumber</td>
                <td>@c.Email</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit","Customers", new { id=c.Id })">Edytuj</a>
                    <a class="btn btn-sm btn-info text-white" href="@Url.Action("Details","Customers", new { id=c.Id })">Szczegóły</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","Customers", new { id=c.Id })">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end mt-3">
    <a class="btn btn-success" href="@Url.Action("Create","Customers")">Dodaj nowego klienta</a>
</div>
