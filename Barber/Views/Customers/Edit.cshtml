@* Views/Customers/Edit.cshtml *@
@model Barber.Models.Customer

@{
    ViewBag.Title = "Edytuj Klienta";
}

<h2 class="mb-4">Edytuj Klienta</h2>
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

<form method="post" class="row g-3">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="col-md-6">
        <label class="form-label">Imię:</label>
        <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Nazwisko:</label>
        <input type="text" name="LastName" class="form-control" value="@Model.LastName" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Telefon:</label>
        <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Email:</label>
        <input type="email" name="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        <a class="btn btn-secondary" href="@Url.Action("Index","Customers")">Anuluj</a>
    </div>
</form>
