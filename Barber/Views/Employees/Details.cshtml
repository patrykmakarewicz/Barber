@* Views/Employees/Details.cshtml *@
@model Barber.Models.Employee

@{
    ViewBag.Title = "Szczegóły Pracownika";
}

<h2 class="mb-4">Szczegóły Pracownika</h2>

<dl class="row">
    <dt class="col-sm-3">Imię</dt>
    <dd class="col-sm-9">@Model.FirstName</dd>

    <dt class="col-sm-3">Nazwisko</dt>
    <dd class="col-sm-9">@Model.LastName</dd>

    <dt class="col-sm-3">Specjalizacja</dt>
    <dd class="col-sm-9">@Model.Specialization</dd>
</dl>

<a class="btn btn-secondary" href="@Url.Action("Index","Employees")">Powrót do listy</a>
