@* Views/Appointments/Index.cshtml *@
@model IEnumerable<Barber.Models.Appointment>

@{
    ViewBag.Title = "Lista Wizyt";
}

<h2 class="mb-4">Lista Wizyt</h2>
<table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Klient</th>
            <th>Usługa</th>
            <th>Pracownik</th>
            <th>Data</th>
            <th>Status</th>
            <th style="width:220px;">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>@(appt.Customer?.FirstName + " " + appt.Customer?.LastName)</td>
                <td>@appt.Service?.Name</td>
                <td>@(appt.Employee != null ? appt.Employee.FirstName + " " + appt.Employee.LastName : "Brak")</td>
                <td>@appt.AppointmentDate</td>
                <td>@appt.Status</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit","Appointments", new { id=appt.Id })">Edytuj</a>
                    <a class="btn btn-sm btn-info text-white" href="@Url.Action("Details","Appointments", new { id=appt.Id })">Szczegóły</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","Appointments", new { id=appt.Id })">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end mt-3">
    <a class="btn btn-success" href="@Url.Action("Create","Appointments")">Dodaj nową wizytę</a>
</div>
